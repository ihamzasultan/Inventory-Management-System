@model List<InventoryManagementSystem.Inventory.Domain.Product>

<h2>Inventory List</h2>

<table>
    <tr>
        <th>Name</th>
        <th>SKU</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Name</td>
        <td>@item.Sku</td>
        <td>@item.Quantity</td>
        <td>
            <a asp-action="EditInventory" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="DeleteInventory" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
</table>
