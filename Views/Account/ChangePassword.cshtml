@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "_Layout";
}


<div class="main-content p-4" style="margin-left: 220px; background-color: #f8f9fa; min-height: 100vh;">
    <div class="card shadow-sm border-0 p-4 rounded-4" style="max-width: 500px;">
        <h4 class="mb-4 text-dark">Change Password</h4>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="ChangePassword" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label text-muted">Current Password</label>
                <input asp-for="CurrentPassword" class="form-control rounded-3 shadow-sm" type="password" placeholder="Enter current password" />
                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label text-muted">New Password</label>
                <input asp-for="NewPassword" class="form-control rounded-3 shadow-sm" type="password" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label text-muted">Confirm New Password</label>
                <input asp-for="ConfirmNewPassword" class="form-control rounded-3 shadow-sm" type="password" placeholder="Re-enter new password" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-dark rounded-3">Update Password</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
