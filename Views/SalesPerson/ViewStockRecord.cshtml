@model IEnumerable<InventoryManagementSystem.Inventory.Domain.StockIn>
@{
    ViewData["Title"] = "View Stock Records";
    Layout = "_Layout";
}
@await Html.PartialAsync("_SalesSidebar")

<table class="table" method="get" asp-action="ViewStockRecord" asp-controller="SalesPerson">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>SKU</th>
            <th>Quantity</th>
            <th>Stocked At</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.Product.Name</td>
                <td>@stock.Product.Sku</td>
                <td>@stock.Quantity</td>
                <td>@stock.StockedAt</td>
                <td>@stock.Remarks</td>
            </tr>
        }
    </tbody>
</table>
