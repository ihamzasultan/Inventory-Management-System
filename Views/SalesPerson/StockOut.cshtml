@model InventoryManagementSystem.Inventory.Domain.StockOut
@{
    Layout = "_Layout";
    ViewData["Title"] = "Stock Out";
}
@await Html.PartialAsync("_SalesSidebar")

<div class="main-content p-4" style="margin-left: 220px; background-color: #f8f9fa; min-height: 100vh;">
    <div class="card shadow-sm border-0 p-4 rounded-4" style="max-width: 550px;">
        <h4 class="mb-4 text-dark">Dispatch Product</h4>

        <form method="post" asp-action="StockOut" asp-controller="SalesPerson" novalidate>
            <div class="mb-3">
                <label for="Product_Name" class="form-label text-muted">Product Name</label>
                <input type="text" class="form-control rounded-3 shadow-sm" id="Product_Name" name="Product.Name" placeholder="Enter product name" required>
            </div>

            <div class="mb-3">
                <label for="Product_Sku" class="form-label text-muted">Product SKU</label>
                <input type="text" class="form-control rounded-3 shadow-sm" id="Product_Sku" name="Product.Sku" placeholder="Enter SKU" required>
            </div>

            <div class="mb-3">
                <label for="Quantity" class="form-label text-muted">Quantity</label>
                <input type="number" class="form-control rounded-3 shadow-sm" id="Quantity" name="Quantity" placeholder="Enter quantity" required>
            </div>

            <div class="mb-3">
                <label for="Client" class="form-label text-muted">Client</label>
                <input type="text" class="form-control rounded-3 shadow-sm" id="Client" name="Client" placeholder="Enter client name" required>
            </div>

            <div class="mb-3">
                <label for="HandOverTo" class="form-label text-muted">Hand Over To</label>
                <input type="text" class="form-control rounded-3 shadow-sm" id="HandOverTo" name="HandOverTo" placeholder="Person receiving the product" required>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-dark rounded-3">Dispatch</button>
            </div>
        </form>
    </div>
</div>
