@model InventoryManagementSystem.Inventory.Domain.StockIn

@{
    ViewData["Title"] = "Add Stock";
    Layout = "_Layout";
}
@await Html.PartialAsync("_SalesSidebar")

<div class="main-content">
    <h2>Add Stock</h2>
    <form method="post" asp-action="AddStock" asp-controller="SalesPerson">
        <div class="form-group">
            <label for="Product_Name">Product Name</label>
            <input type="text" class="form-control" id="Product_Name" name="Product.Name" required>
        </div>
        <div class="form-group">
            <label for="Product_Sku">SKU</label>
            <input type="text" class="form-control" id="Product_Sku" name="Product.Sku" required>
        </div>
        <div class="form-group">
            <label for="Quantity">Quantity</label>
            <input type="number" class="form-control" id="Quantity" name="Quantity" required>
        </div>
        <div class="form-group">
            <label for="Remarks">Remarks</label>
            <input type="text" class="form-control" id="Remarks" name="Remarks">
        </div>
        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>
